{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "jhdev96/multi-frontend",
      "hostname": "frontend",
      "essential": false 
    },
    {
      "name": "server",
      "image": "jhdev96/multi-server",
      "hostname": "api",
      "essential": false 
    },
    {
      "name": "worker",
      "image": "jhdev96/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "jhdev96/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["frontend", "server"]
    }
  ]
}